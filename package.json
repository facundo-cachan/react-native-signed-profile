{
  "name": "promotions",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "watch": "watchman watch-del-all;rm -rf $TMPDIR/metro-bundler-cache-*;watchman watch-del './';watchman watch-project './'",
    "fix:android": "cd android/ && ./gradlew :app:dependencies --offline -U --warning-mode all && cd ..",
    "fix:ios": "cd ios/ && bundle install && bundle exec pod install && cd ..",
    "clean:ios": "cd ios/ && rm -rf build/ Pods/ Podfile.lock && cd ..",
    "clean:android": "cd android/ && ./gradlew clean && cd ..",
    "update:android": "cd android/ && ./gradlew :app:dependencies -U --warning-mode all && cd ..",
    "update:ios": "cd ios/ && NO_FLIPPER=1 pod install --verbose && cd ..",
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "lint": "eslint .",
    "start": "react-native start --reset-cache",
    "test": "jest --colors --detectOpenHandles",
    "test:coverage": "jest --colors --coverage",
    "test:watch": "jest --colors --detectOpenHandles --watchAll",
    "ios:release": "npx react-native bundle --entry-file='index.ts' --bundle-output='./ios/main.jsbundle' --dev=false --platform='ios'",
    "android:release": "npx react-native bundle --platform android --dev false --entry-file index.ts --bundle-output android/app/src/main/assets/index.android.bundle && cd android && ./gradlew app:assembleRelease"
  },
  "dependencies": {
    "@luncheon/simplify-svg-path": "^0.2.0",
    "react": "18.2.0",
    "react-native": "0.73.2",
    "react-native-gesture-handler": "^2.14.0",
    "react-native-svg": "^14.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native/babel-preset": "0.73.19",
    "@react-native/eslint-config": "0.73.2",
    "@react-native/metro-config": "0.73.3",
    "@react-native/typescript-config": "0.73.1",
    "@types/react": "^18.2.6",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.6.3",
    "eslint": "^8.19.0",
    "jest": "^29.6.3",
    "prettier": "2.8.8",
    "react-test-renderer": "18.2.0",
    "typescript": "5.0.4"
  },
  "engines": {
    "node": ">=18"
  }
}
